@page "/categories"
@inject AdminService adminService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Settings - Transaction Types</PageTitle>
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Color="Color.Inherit" Typo="Typo.h5">Registered Transaction Types</MudText>
    <MudDataGrid T="TransactionType" Items="@transactionTypes" Dense=true Hover=true Bordered=true Striped=true 
        QuickFilter="@SearchFilter" ColumnResizeMode="@ResizeMode.Column">
        <ToolBarContent>
            <MudButton OnClick="@AddItem" Color="@Color.Success" Class="add-item-btn mr-5">Add Transaction Type</MudButton>
            <MudSwitch @bind-Checked="@_showAll" Color="Color.Info" Label="Show Timestamps"/>
            <MudSpacer />
            <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true"
                AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <Columns>
            <PropertyColumn Property="x => x.Name" Title="Name" />
            <PropertyColumn Property="x => x.Description" Title="Description" />
            <PropertyColumn Property="x => x.Created" Title="Created" Hidden="@(!_showAll)"/>
            <PropertyColumn Property="x => x.CreatedBy" Title="Created By" Hidden="@(!_showAll)"/>
            <PropertyColumn Property="x => x.Modified" Title="Last Modified" Hidden="@(!_showAll)"/>
            <PropertyColumn Property="x => x.ModifiedBy" Title="Last Modified By" Hidden="@(!_showAll)"/>
            <TemplateColumn>
                <CellTemplate>
                    <MudStack Row>
                        <MudIconButton Size="@Size.Small" Color="@Color.Info" Title="Edit" Icon="@Icons.Material.Outlined.Edit" OnClick="@((e)=> HandleEdit(context.Item))"/>
                        <MudIconButton Size="@Size.Small" Color="@Color.Error" Title="delete" Icon="@Icons.Material.Outlined.Delete" OnClick="@((e) => HandleDelete(context.Item))"/>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>
</MudContainer>

@code {
    private List<TransactionType> transactionTypes = new List<TransactionType>();
    private string? _searchString = "";
    private bool _showAll = false;

    protected override async Task OnInitializedAsync()
    {
        transactionTypes = await adminService.GetTransactionTypesAsync();
    }

    private Func<TransactionType, bool> SearchFilter => p =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        return p.Name!.Contains(_searchString, StringComparison.OrdinalIgnoreCase);
    };

    async Task HandleEdit(TransactionType transactionType) {
        var parameters = new DialogParameters<TransactionTypeDialog>();
        var copy = new TransactionType(transactionType);
        parameters.Add("TransactionType", copy);
        parameters.Add("Mode", "edit");

        var dialog = await DialogService.ShowAsync<TransactionTypeDialog>("Edit Transaction Type", parameters);
        var result = await dialog.Result;

        if (!result.Canceled) {
            transactionType = copy;
            Snackbar.Add("Transaction type updated successfully", Severity.Success);
        }
    }

    async Task HandleDelete(TransactionType transactionType) {
        var parameters = new DialogParameters<TransactionTypeDialog>();
        parameters.Add("TransactionType", transactionType);
        parameters.Add("Mode", "del");

        var dialog = await DialogService.ShowAsync<TransactionTypeDialog>("Delete Transaction Type", parameters);
        var result = await dialog.Result;

        if (!result.Canceled) {
            transactionTypes.Remove(transactionType);
            Snackbar.Add("Transaction type deleted successfully", Severity.Success);
        }
    }

    async Task AddItem() 
    {
        var parameters = new DialogParameters<TransactionTypeDialog>();
        parameters.Add("TransactionType", new TransactionType());
        parameters.Add("Mode", "add");

        var dialog = await DialogService.ShowAsync<TransactionTypeDialog>("Add Transaction Type", parameters);
        var result = await dialog.Result;

        if (!result.Canceled) {
            transactionTypes.Add((TransactionType) result.Data);
            Snackbar.Add("New transaction type added successfully", Severity.Success);
        }
    }
}