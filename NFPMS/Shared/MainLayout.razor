@inherits LayoutComponentBase
@using MudBlazor

<PageTitle>NFPMS</PageTitle>

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">BCIT Charity Group</MudText>
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Style="margin-bottom:2rem;">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudAppBar Dense="true" Bottom="true" Style="background-color: rgba(0,0,0,0.15); color: black; height:2rem;" Elevation="1">
        <MudContainer Class="text-center">
            <MudText>&copy; 2023 - Non-For-Profit Management System - Created by Xixiang Chen</MudText>
        </MudContainer>
    </MudAppBar>
</MudLayout>

@code
{
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}



